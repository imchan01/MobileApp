        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Contact activity">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:labelFor="@+id/i_name"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/i_name"
                    android:inputType="textPersonName"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:labelFor="@+id/i_email"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/i_email"
                    android:inputType="textEmailAddress"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Project"
                    android:labelFor="@+id/i_project"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/i_project"
                    android:inputType="text"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="View contact information"
                android:textAlignment="center"
                android:id="@+id/submit"
                ></Button>
        </LinearLayout>


    </LinearLayout>


